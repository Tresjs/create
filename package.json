{
  "name": "create-tres",
  "version": "1.0.0",
  "type": "module",
  "packageManager": "pnpm@10.17.0",
  "description": "CLI wizard to create TresJS projects",
  "keywords": [
    "tresjs",
    "vue",
    "threejs",
    "3d",
    "cli",
    "create",
    "wizard"
  ],
  "author": "Alvaro Saburido <hola@alvarosaburido.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Tresjs/create-tresjs.git"
  },
  "bugs": {
    "url": "https://github.com/Tresjs/create-tresjs/issues"
  },
  "homepage": "https://github.com/Tresjs/create-tresjs#readme",
  "bin": {
    "create-tresjs": "./bin/index.js"
  },
  "files": [
    "bin/",
    "dist/",
    "templates/",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "dev": "pnpm run build && node dist/index.js",
    "test": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "pnpm run build",
    "release": "release-it"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "fs-extra": "^11.3.2",
    "kolorist": "^1.8.0",
    "prompts": "^2.4.2",
    "validate-npm-package-name": "^6.0.2"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.1",
    "@tresjs/eslint-config": "^1.4.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.5.2",
    "@types/prompts": "^2.4.9",
    "@types/validate-npm-package-name": "^4.0.2",
    "release-it": "^19.0.5",
    "tsdown": "^0.15.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
